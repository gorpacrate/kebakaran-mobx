{
  "name": "@gorpacrate/kebakaran3",
  "version": "3.0.0",
  "description": "strongly typed high level utilities for consuming data from firebase, based on https://github.com/barbuza/kebakaran2",
  "main": "dist/lib/index.js",
  "scripts": {
    "prepublish-only": "npm run build",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "build": "rimraf lib && tsc && tslint -p tsconfig.json && jest --coverage && rimraf lib/__tests__"
  },
  "license": "ISC",
  "peerDependencies": {
    "firebase": "*",
    "immutable": "*",
    "es6-promise": "*",
    "tslib": "*"
  },
  "devDependencies": {
    "@types/firebase": "^2.4.31",
    "@types/jest": "^20.0.6",
    "@types/node": "^8.0.20",
    "coveralls": "^2.13.1",
    "firebase": "^4.2.0",
    "immutable": "^3.8.1",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.10",
    "tslib": "^1.7.1",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "es6-promise": "^4.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "roots": [
      "<rootDir>"
    ],
    "mapCoverage": true,
    "testRegex": "/__tests__/[^/]+-test\\.(ts|js)$",
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/__tests__/**/*.ts"
    ]
  }
}
